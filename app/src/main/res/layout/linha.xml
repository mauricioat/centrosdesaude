<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/llLinhaEst">
    <!--Com o número na frente da cor define a porcentagem de transparência-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Estabelecimento"
            android:id="@+id/nomeEstabelecimento"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Endereço"
            android:id="@+id/enderecoEstabelecimento" />

        <TextView
            android:text="Distância"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDistancia" />

        <RatingBar
            android:id="@+id/rbAvGeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="2.0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="47dp"
            android:layout_height="37dp"
            android:background="@drawable/googlemapsicone"
            android:id="@+id/btnMap"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>